    canonicalUrl="https://adrianweb.xyz/blog"
>
    <div class="blog-page">
        <h1>Blog</h1>
        <p class="blog-description">
            Thoughts on Java, cloud architecture, and building software.
        </p>
        <ul class="post-list">
            {sortedPosts.map((post) => (
                <li class="post-item">
                    <span class="post-date">{formatDate(post.data.date)}</span>
                    <h3>
                        <a href={`/blog/${getSlug(post.id)}`}>{post.data.title}</a>
                    </h3>
                    <p class="post-excerpt">{post.data.excerpt}</p>
                </li>
            ))}
        </ul>
    </div>
</BaseLayout>
